<?xml version="1.0"?>
<project name="MongoDB Rhino" default="build">
	
	<property name="src" value="../modules/com.mongodb.rhino/src" />
	<property name="lib" value="../libraries" />
	<property name="deploy" value="../modules/com.mongodb.rhino/deploy" />
	<property name="dist" value="./distribution" />
	<property name="content" value="${dist}/content" />
	<property name="tmp" value="./tmp" />

	<target name="compile" description="Compile MongoDB Rhino code">
		<mkdir dir="${tmp}" />
		<javac srcdir="${src}" destdir="${tmp}" target="1.5" includeAntRuntime="false">
			<classpath>
				<fileset dir="${lib}/mongo-java-driver/lib" />
				<fileset dir="${lib}/rhino/lib" />
			</classpath>
		</javac>
	</target>

	<target name="javadoc" description="Create MongoDB Rhino API docs">
		<available file="${content}/doc/api" property="javadoc-present" />
		<antcall target="javadoc-unless" />
	</target>

	<target name="javadoc-unless" description="Create MongoDB Rhino API docs" unless="javadoc-present">
		<javadoc access="protected" author="true" excludepackagenames="**.internal.*" destdir="${content}/doc/api" nodeprecated="false" nodeprecatedlist="false" noindex="false" nonavbar="false" notree="false" source="1.5" sourcepath="${src}" splitindex="true" use="true" version="true" windowtitle="MongoDB Rhino 1.0" doctitle="Scipturian 1.0"  verbose="true">
			<link href="http://download.oracle.com/javase/1.5.0/docs/api/" />
			<link href="http://download.oracle.com/javase/6/docs/api/" />
			<link href="http://www.mozilla.org/rhino/apidocs/" />
			<bottom>
				<![CDATA[<i>Copyright &#169; 2009-2011 <a target="_top" href="http://threecrickets.com/">Three Crickets LLC</a>.</i>]]>
			</bottom>
			<classpath>
				<fileset dir="${lib}/mongo-java-driver/lib" />
				<fileset dir="${lib}/rhino/lib" />
			</classpath>
		</javadoc>
	</target>
	
	<target name="jar" depends="compile" description="Create MongoDB Rhino jar">
		<mkdir dir="${content}/lib" />
		<jar destfile="${content}/lib/com.mongodb.rhino.jar" basedir="${tmp}" />
	</target>
	
	<target name="licenses" description="Fetch licences">
		<copy todir="${content}/licenses/mongo-java-driver">
			<fileset dir="${lib}/mongo-java-driver/license" />
		</copy>
	</target>
	
	<target name="libraries" depends="jar" description="Fetch libraries">
		<copy todir="${content}/lib">
			<fileset dir="${lib}/mongo-java-driver/lib" />
		</copy>
		<copy todir="${content}/lib">
			<fileset dir="${lib}" includes="*.txt" />
		</copy>
	</target>
	
	<target name="src" description="Fetch MongoDB Rhino source">
		<copy todir="${content}/src">
			<fileset dir="${src}" />
		</copy>
	</target>

	<target name="deploy" depends="src, javadoc" description="Fetch deployment">
		<copy todir="${content}">
			<fileset dir="${deploy}" />
		</copy>
	</target>
	
	<target name="package" depends="libraries, licenses, deploy" description="Create MongoDB Rhino zip">
		<zip destfile="mongodb-rhino.zip" basedir="${content}" includes="**/*" />
	</target>
	
	<target name="build" depends="package" description="Build distribution" />
	
	<target name="clean" description="Clean">
		<delete dir="${tmp}" />
		<delete dir="${dist}" />
	</target>
	
	<target name="rebuild" depends="clean, build" description="Clean and build distribution" />

</project>
