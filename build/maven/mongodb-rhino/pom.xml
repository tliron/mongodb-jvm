<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<groupId>com.mongodb</groupId>
	<artifactId>rhino-driver</artifactId>
	<version>2.0</version>
	<packaging>pom</packaging>

	<name>MongoDB Rhino Driver</name>
	<description>Adds some JavaScript-specific friendliness to the MongoDB Java driver.</description>
	<url>http://code.google.com/p/mongodb-rhino/</url>
	<inceptionYear>2010</inceptionYear>

	<scm>
		<connection>scm:git:https://code.google.com/p/mongodb-rhino/</connection>
		<url>http://code.google.com/p/mongodb-rhino/source/browse/</url>
	</scm>

	<organization>
		<name>Three Crickets LLC</name>
		<url>http://threecrickets.com/</url>
	</organization>

	<licenses>
		<license>
			<name>The Apache Software License, Version 2.0</name>
			<url>http://www.apache.org/licenses/LICENSE-2.0.txt</url>
			<distribution>repo</distribution>
		</license>
	</licenses>

	<developers>
		<developer>
			<id>tal.liron</id>
			<name>Tal Liron</name>
			<email>tal.liron@threecrickets.com</email>
			<timezone>-6</timezone>
		</developer>
	</developers>

	<dependencies>
		<dependency>
			<groupId>com.mongodb</groupId>
			<artifactId>java-driver</artifactId>
			<version>2.8.0</version>
		</dependency>
	</dependencies>

	<build>
		<directory>../../cache/maven</directory>

		<plugins>
			<!-- Delegate to the Ant build script -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-antrun-plugin</artifactId>
				<version>1.7</version>
				<executions>
					<execution>
						<phase>generate-resources</phase>
						<configuration>
							<tasks>
								<ant dir="../.." antfile="build.xml" target="libraries" />
							</tasks>
						</configuration>
						<goals>
							<goal>run</goal>
						</goals>
					</execution>
				</executions>
				<dependencies>
					<dependency>
						<groupId>com.sun</groupId>
						<artifactId>tools</artifactId>
						<version>${java.vm.version}</version>
						<scope>system</scope>
						<systemPath>${java.home}/../lib/tools.jar</systemPath>
					</dependency>
				</dependencies>
			</plugin>

			<!-- jar artifact -->
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>build-helper-maven-plugin</artifactId>
				<version>1.7</version>
				<executions>
					<execution>
						<id>jar</id>
						<phase>package</phase>
						<goals>
							<goal>attach-artifact</goal>
						</goals>
						<configuration>
							<artifacts>
								<artifact>
									<type>jar</type>
									<file>../../distribution/content/libraries/jars/${project.groupId}/${project.artifactId}/${project.version}/${project.artifactId}.jar</file>
								</artifact>
							</artifacts>
						</configuration>
					</execution>
				</executions>
			</plugin>

			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-jar-plugin</artifactId>
				<version>2.3.2</version>
				<executions>
					<!-- javadoc artifact -->
					<execution>
						<id>javadoc</id>
						<phase>package</phase>
						<goals>
							<goal>jar</goal>
						</goals>
						<configuration>
							<classifier>javadoc</classifier>
							<classesDirectory>../../distribution/content/reference/documentation/api</classesDirectory>
						</configuration>
					</execution>

					<!-- sources artifact -->
					<execution>
						<id>source</id>
						<phase>package</phase>
						<goals>
							<goal>jar</goal>
						</goals>
						<configuration>
							<classifier>sources</classifier>
							<classesDirectory>../../distribution/content/reference/source/${project.groupId}/${project.artifactId}/${project.version}</classesDirectory>
						</configuration>
					</execution>
				</executions>
			</plugin>

		</plugins>
	</build>

</project>
